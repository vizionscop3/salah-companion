# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SalahCompanion' do
  config = use_native_modules!
  
  # Enable modular headers for Swift pods (required for Firebase)
  use_modular_headers!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix deployment target warnings for all pods
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 14.0
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
        end
      end
    end
    
    # Fix RCT-Folly clockid_t typedef redefinition error with newer iOS SDK
    # Patch folly/portability/Time.h to guard clockid_t typedef
    begin
      folly_time_h = File.join(installer.sandbox.root, 'Headers/Private/RCT-Folly/folly/portability/Time.h')
      if File.exist?(folly_time_h)
        file_content = File.read(folly_time_h)
        # Only patch if not already patched
        unless file_content.include?('#ifndef clockid_t')
          patched_content = file_content.gsub(
            /typedef uint8_t clockid_t;/,
            "#ifndef clockid_t\ntypedef uint8_t clockid_t;\n#endif"
          )
          if file_content != patched_content
            File.write(folly_time_h, patched_content)
            puts "✅ Patched RCT-Folly Time.h to fix clockid_t redefinition"
          end
        end
      end
    rescue => e
      puts "⚠️  Could not patch Time.h: #{e.message}"
    end
  end
end
